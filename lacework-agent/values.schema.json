{
    "$schema": "http://json-schema.org/draft-07/schema",
    "required": [
        "laceworkConfig"
    ],
    "properties": {
        "image": {
            "type": "object",
            "properties": {
                "imagePullSecrets": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": [
                        "Always",
                        "IfNotPresent",
                        "Never"
                    ]
                },
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "laceworkConfig": {
            "type": "object",
            "required": [
                "accessToken"
            ],
            "properties": {
                "accessToken": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "required": [
                                "existingSecret"
                            ],
                            "properties": {
                                "existingSecret": {
                                    "type": "object",
                                    "required": [
                                        "name",
                                        "key"
                                    ],
                                    "properties": {
                                        "key": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    ]
                },
                "annotations": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "autoUpgrade": {
                    "type": "string",
                    "enum": [
                        "disable",
                        "enable"
                    ]
                },
                "kubernetesCluster": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "labels": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "env": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "proxyUrl": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "serverUrl": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "^https://.*.lacework.net$"
                }
            }
        },
        "priorityClassName": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "additionalProperties": true
}
