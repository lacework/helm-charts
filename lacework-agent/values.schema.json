{
    "$schema": "http://json-schema.org/draft-07/schema",
    "required": [
        "laceworkConfig"
    ],
    "properties": {
        "image": {
            "type": "object",
            "properties": {
                "imagePullSecrets": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": [
                        "Always",
                        "IfNotPresent",
                        "Never"
                    ]
                },
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "laceworkConfig": {
            "type": "object",
            "properties": {
                "accessToken": {
                    "type": "string"
                },
                "accessTokenSecret": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "key": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "autoUpgrade": {
                    "type": "string",
                    "enum": [
                        "disable",
                        "enable"
                    ]
                },
                "kubernetesCluster": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "env": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "serverUrl": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "priorityClassName": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "additionalProperties": true
}
